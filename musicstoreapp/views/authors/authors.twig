{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block main_container %}
    <!-- Búsqueda -->
    <h2>Autores</h2>
    <div class="row">
        <!-- http://librosweb.es/libro/bootstrap_3/capitulo_2/tipos_de_rejillas.html -->
        <!-- Inicio del Bloque autor -->
        {% for author in authors %}
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                <div style="width:200px">
                    <a href="/authors/id">
                        <div>{{ author.name }} </div>
                        <div class="small">{{ author.group }} </div>
                        <div class="small">{{ author.kind }}</div>
                    </a>
                </div>
            </div>
        {% endfor %}
        <!-- Fin del Bloque autor -->
    </div>
{% endblock %}