{% extends "../layout.twig" %}
{% block title %} Agregar Autor {% endblock %}
{% block main_container %}
    <h2>Agregar autor</h2>
    <form class="form-horizontal" method="post" action="/authors/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nombre:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre de el autor" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="group">Grupo:</label>
            <div class="col-sm-10">
                <input id="group" class="form-control" name="group"
                       placeholder="Grupo de el autor" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="kind">Rol:</label>
            <div class="col-sm-10">
                <select class="form-control" id="kind" name="kind" required>
                    <option value="singer">Cantante</option>
                    <option value="drummer">Bater√≠a</option>
                    <option value="guitar-player">Guitarrista</option>
                    <option value="bass-player">Bajista</option>
                    <option value="keyboard-player">Teclista</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </form>
{% endblock %}