{% extends "layout.twig" %}
{% block title %} Canciones favoritas {% endblock %}
{% block main_container %}
    <h2>Mis favoritos</h2>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Titulo</th>
            <th>precio</th>
            <th class="col-md-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.title }}</td>
                <td>{{ favorite.price }}</td>
                <td>
                    <a href="/favorites/delete/{{ favorite.song_id }}">Eliminar</a> <br>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
